<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ibea.fides.ui.VolunteerSettingsActivity">

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView_Settings"
        android:textSize="25sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cityedittext"
        android:layout_below="@+id/streetedittext"
        android:layout_alignLeft="@+id/streetedittext"
        android:layout_alignStart="@+id/streetedittext" />

    <TextView
        android:text="Zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/stateedittext"
        android:layout_alignLeft="@+id/textView_State"
        android:layout_alignStart="@+id/textView_State" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/stateedittext"
        android:layout_alignRight="@+id/stateedittext"
        android:layout_alignEnd="@+id/stateedittext"
        android:id="@+id/zipedittext" />

    <Button
        android:text="Set Profile Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pictureButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_username"
        android:textSize="18sp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/addressButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameButton"
        android:layout_alignBaseline="@+id/usernameedittext"
        android:layout_alignBottom="@+id/usernameedittext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameedittext"
        android:hint="New Username"
        android:layout_alignBaseline="@+id/textView_username"
        android:layout_alignBottom="@+id/textView_username"
        android:layout_alignLeft="@+id/pictureButton"
        android:layout_alignStart="@+id/pictureButton"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignRight="@+id/pictureButton"
        android:layout_alignEnd="@+id/pictureButton" />

    <TextView
        android:text="State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_State"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/stateedittext"
        android:layout_alignBottom="@+id/stateedittext"
        android:layout_toLeftOf="@+id/stateedittext"
        android:layout_toStartOf="@+id/stateedittext"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_City"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/cityedittext"
        android:layout_alignBottom="@+id/cityedittext"
        android:layout_alignLeft="@+id/textView_State"
        android:layout_alignStart="@+id/textView_State" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/streetedittext"
        android:layout_alignBaseline="@+id/textView_Street"
        android:layout_alignBottom="@+id/textView_Street"
        android:layout_toRightOf="@+id/textView_username"
        android:layout_toEndOf="@+id/textView_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/stateedittext"
        android:layout_below="@+id/cityedittext"
        android:layout_alignLeft="@+id/cityedittext"
        android:layout_alignStart="@+id/cityedittext" />

    <TextView
        android:text="Street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView_Street"
        android:textSize="18sp"
        android:layout_below="@+id/textView_Settings"
        android:layout_alignLeft="@+id/textView_City"
        android:layout_alignStart="@+id/textView_City" />

    <Button
        android:text="Submit Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressButton"
        android:layout_below="@+id/zipedittext"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avatar_blank"
        android:layout_above="@+id/textView_State"
        android:layout_alignLeft="@+id/usernameButton"
        android:layout_alignStart="@+id/usernameButton"
        android:id="@+id/tempPicture" />

</RelativeLayout>
