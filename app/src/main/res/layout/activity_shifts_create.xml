<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shifts_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibea.fides.ui.ShiftsCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/LightOnDarkLayout"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="12dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_startTimeLabel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Start Time:"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_From"
                android:textOn="PM"
                android:textOff="AM"
                android:checked="false"
                android:splitTrack="false"
                android:showText="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:thumbTint="@color/colorSecondaryText"
                android:trackTint="@color/colorIcons"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:id="@+id/editText_From"
                android:hint="From (h:mm)"
                android:inputType="time"
                android:gravity="center_vertical|end"
                android:layout_alignBaseline="@+id/switch_From"
                android:layout_alignBottom="@+id/switch_From"
                android:layout_toLeftOf="@+id/switch_From" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_endTimeLabel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="End Time:"
                android:layout_centerVertical="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:id="@+id/editText_Until"
                android:hint="Until (h:mm)"
                android:inputType="time"
                android:gravity="right|center_vertical"
                android:paddingRight="12dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/switch_To" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_To"
                android:textOn="PM"
                android:textOff="AM"
                android:showText="true"
                android:gravity="center_vertical"
                android:trackTint="@color/colorIcons"
                android:thumbTint="@color/colorSecondaryText"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText_Date"
                android:hint="Date (dd/mm/yyyy)"
                android:inputType="date"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_dateLabel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date:"
                android:layout_alignBaseline="@+id/editText_Date"
                android:layout_alignBottom="@+id/editText_Date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText_MaxVolunteers"
                android:hint="###"
                android:inputType="number"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_volunteersNeededLabel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Volunteers Needed:"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_Description"
                android:hint="explain duties"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_descriptionLabel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description:"
                android:layout_alignBaseline="@+id/editText_Description"
                android:layout_alignBottom="@+id/editText_Description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_shortDescriptionLabel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Short Description:"
                android:layout_alignBaseline="@+id/editText_ShortDescription"
                android:layout_alignBottom="@+id/editText_ShortDescription"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_ShortDescription"
                android:hint="one-sentence max"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/editText_Address"
                android:hint="full street address"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_address"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address:"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_zipLabel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ZIP Code:"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_Zip"
                android:hint="zip code"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:text="Post Shift"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_LetsGo"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryLight"
        android:textSize="24sp"
        android:height="64dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
