<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:id="@+id/view2"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:gravity="center"
                    android:text="Hours Worked: "
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/textView_HoursWorkedLabel"/>

                <EditText
                    android:hint="hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/hoursInput"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView_HoursWorkedLabel"
                    android:layout_toEndOf="@+id/textView_HoursWorkedLabel"
                    android:layout_toLeftOf="@+id/showButton"
                    android:layout_toStartOf="@+id/showButton"/>

                <Button
                    android:background="@drawable/ic_done_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/showButton"
                    android:layout_gravity="bottom|right|end"
                    android:minWidth="48dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <!--<TextView-->
                <!--android:text="Didn't Show"-->
                <!--android:background="@color/cardview_light_background"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="match_parent"-->
                <!--android:id="@+id/noShowButton"-->
                <!--android:gravity="center"-->
                <!--android:layout_margin="10dp"/>-->

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>