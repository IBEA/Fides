<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentSecondary">

    <EditText
        android:hint="Hours Volunteered"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:id="@+id/hoursInput" />


    <Button
        android:text="Didn't Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hoursInput"
        android:layout_marginLeft="80dp"
        android:id="@+id/noShowButton" />

    <Button
        android:text="Showed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/noShowButton"
        android:layout_below="@+id/hoursInput"
        android:id="@+id/showButton" />

</RelativeLayout>