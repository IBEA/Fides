<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.ibea.fides.ui.fragments.ShiftsPendingForOrganizationFragment"
    android:theme="@style/DarkOnLightLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView_Splash"
        android:text="No volunteer shifts pending. To schedule a shift, use the button below."
        android:padding="36dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/unratedRecyclerView"
        android:layout_below="@+id/textView_Splash"
        android:padding="12dp"
        android:layout_above="@+id/button_CreateShift"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:borderWidth="0dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorSearchButton"
        android:backgroundTint="@color/colorSearchButton"
        android:layout_margin="5dp"
        android:id="@+id/button_CreateShift"/>


</RelativeLayout>
