<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibea.fides.ui.CreateUserAccount">

    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/contactNameInput"
        android:hint="Your Name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/streetInput"
        android:hint="Street"
        android:layout_below="@+id/contactNameInput"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cityInput"
        android:hint="City"
        android:layout_below="@+id/streetInput"
        android:layout_alignStart="@+id/streetInput"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/stateSpinner"
        android:layout_below="@+id/streetInput"
        android:layout_alignRight="@+id/streetInput"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/zipcodeInput"
        android:hint="Zipcode"
        android:layout_below="@+id/cityInput"
        android:layout_alignStart="@+id/cityInput"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionInput"
        android:hint="Short Description of Organization"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:layout_below="@+id/zipcodeInput"
        android:layout_alignStart="@+id/zipcodeInput"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Create Volunteer"
        android:id="@+id/createUserButton"
        android:background="@color/colorAccent"
        android:textColor="@color/colorIcons"
        android:layout_below="@+id/descriptionInput"
        android:layout_alignStart="@+id/descriptionInput"
        android:textSize="25sp" />

    <TextView
        android:text="or click here to create an organization"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/switchTypeTextView"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/createUserButton"
        android:layout_alignStart="@+id/createUserButton"/>

</RelativeLayout>