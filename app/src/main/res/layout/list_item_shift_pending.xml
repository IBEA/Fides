<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:theme="@style/DarkOnLightLayout"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:id="@+id/textView_OrgName"
            android:text="Org Name"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Date"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Date"
            android:layout_below="@+id/textView_OrgName"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Time"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="Time"
            android:layout_toRightOf="@+id/textView_Date"
            android:layout_alignTop="@+id/textView_Date" />

        <TextView
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Address"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView_Time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ShortDescription"
            android:textSize="15dp"
            android:text="Short Description"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView_Address"/>

    </RelativeLayout>
    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#7f7f7f"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
