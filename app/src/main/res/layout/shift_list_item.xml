<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:theme="@style/DarkOnLightLayout"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/shiftListItemTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView_OrgName"
                android:text="Org Name"
                android:textSize="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTimeDate"
                android:layout_below="@+id/textView_OrgName">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_Time"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Time"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_Date"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Date"
                    android:layout_toRightOf="@+id/textView_Time"
                    android:paddingLeft="12dp"
                    android:paddingStart="12dp"/>
            </RelativeLayout>

            <TextView
                android:text="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Address"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layoutTimeDate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_ShortDescription"
                android:textSize="15dp"
                android:text="Short Description"
                android:layout_below="@+id/textView_Address"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shiftListItemButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_Complete"
                android:layout_below="@+id/button_Variable"
                android:background="@drawable/ic_done_black_24dp"
                android:minWidth="40dp"
                android:minHeight="40dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_Variable"
                android:background="@drawable/ic_add_black_24dp"
                android:minWidth="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:minHeight="40dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
