<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="262dp"
            android:layout_height="114dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView_OrgName"
                android:text="Organization Name"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Date"
                android:layout_below="@id/textView_OrgName"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Date"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_ShortDescription"
                android:layout_below="@id/textView_Time"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Short Description"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Time"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Time"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/textView_Date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Address"
                android:layout_below="@+id/textView_ShortDescription"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:text="Volunteer"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/button_Volunteer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <Button
                android:text="Complete"
                android:layout_width="114dp"
                android:layout_height="36dp"
                android:id="@+id/button_Complete"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
