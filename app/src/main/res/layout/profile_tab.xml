<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/usernametext"
        android:textSize="24sp"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="40dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView1"
            android:src="@drawable/common_google_signin_btn_icon_dark"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>
    </android.support.v7.widget.CardView>

    <com.hookedonplay.decoviewlib.DecoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dynamicArcView"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="220dp" />


    <com.hookedonplay.decoviewlib.DecoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hoursArcView"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:text="0%"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trustpercent"
        android:textSize="35sp"
        android:textColor="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/totalHours"
        android:layout_alignBottom="@+id/totalHours"
        android:layout_toLeftOf="@+id/view2"
        android:layout_toStartOf="@+id/view2" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_bright"
        android:id="@+id/totalHours"
        android:textSize="36sp"
        android:layout_below="@+id/nada"
        android:layout_alignLeft="@+id/trusttext"
        android:layout_alignStart="@+id/trusttext"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="Trust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nada"
        android:textSize="25sp"
        android:textColor="@android:color/holo_orange_light"
        android:layout_below="@+id/usernametext"
        android:layout_alignRight="@+id/trustpercent"
        android:layout_alignEnd="@+id/trustpercent" />

    <TextView
        android:text="Hours"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trusttext"
        android:textSize="24sp"
        android:layout_below="@+id/usernametext"
        android:layout_toRightOf="@+id/view2"
        android:layout_toEndOf="@+id/view2" />

</RelativeLayout>