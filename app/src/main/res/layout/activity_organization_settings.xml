<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_organization_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ibea.fides.ui.OrganizationSettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:text="Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTextView"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/streetEditText"
                android:hint="Street Address"
                android:layout_below="@+id/titleTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cityEditText"
                android:hint="City"
                android:layout_below="@+id/streetEditText"
                android:layout_alignLeft="@+id/streetEditText"
                android:layout_alignStart="@+id/streetEditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/stateEditText"
                android:hint="State"
                android:layout_below="@+id/cityEditText"
                android:layout_alignLeft="@+id/cityEditText"
                android:layout_alignStart="@+id/cityEditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/zipEditText"
                android:hint="Zipcode"
                android:layout_below="@+id/stateEditText"
                android:layout_alignRight="@+id/stateEditText"
                android:layout_alignEnd="@+id/stateEditText" />

            <Button
                android:text="Submit Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressButton"
                android:layout_below="@+id/zipEditText"
                android:layout_centerHorizontal="true" />
        
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/userNameEditText"
                android:hint="New Username"
                android:layout_below="@+id/addressButton"
                android:layout_alignParentLeft="true" />
        
            <Button
                android:text="Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameButton"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/userNameEditText"/>

            <Button
                android:text="Set Profile Picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pictureButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/userNameButton"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/descriptionEditText"
                android:hint="Change Description"
                android:layout_below="@+id/pictureButton"
                android:layout_marginTop="14dp" />
        
            <Button
                android:text="Update Blurb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/descriptionEditText"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tagEditText"
                android:hint="Enter a Tag"
                android:layout_below="@id/descriptionButton"
                android:layout_alignParentLeft="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Tag"
                android:id="@+id/tagButton"
                android:layout_alignParentRight="true"
                android:layout_below="@id/descriptionButton"/>



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
