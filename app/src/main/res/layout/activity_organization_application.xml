<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_organization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ibea.fides.ui.OrganizationApplicationActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/nameInput"
        android:hint="Your Name"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/submitButton"
        android:layout_alignEnd="@+id/submitButton"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/roleInput"
        android:layout_below="@+id/nameInput"
        android:layout_alignLeft="@+id/nameInput"
        android:layout_alignStart="@+id/nameInput"
        android:inputType="text"
        android:hint="Your Position in Company" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/organizationInput"
        android:hint="Organization Name"
        android:layout_below="@+id/roleInput"
        android:layout_alignLeft="@+id/roleInput"
        android:layout_alignStart="@+id/roleInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/addressInput"
        android:hint="Address of Organization"
        android:layout_below="@+id/organizationInput"
        android:layout_alignLeft="@+id/organizationInput"
        android:layout_alignStart="@+id/organizationInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/addressInput"
        android:layout_alignRight="@+id/addressInput"
        android:layout_alignEnd="@+id/addressInput"
        android:id="@+id/zipcodeInput"
        android:hint="Zipcode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/einInput"
        android:inputType="text"
        android:hint="Organization EIN"
        android:layout_below="@+id/zipcodeInput"
        android:layout_alignLeft="@+id/zipcodeInput"
        android:layout_alignStart="@+id/zipcodeInput" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_below="@+id/einInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

</RelativeLayout>
