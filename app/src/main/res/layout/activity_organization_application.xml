<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_organization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ibea.fides.ui.OrganizationApplicationActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/einInput"
        android:inputType="text"
        android:hint="Organization EIN"
        android:layout_below="@+id/zipcodeInput"
        android:layout_alignLeft="@+id/zipcodeInput"
        android:layout_alignStart="@+id/zipcodeInput" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameInput"
        android:hint="Your Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/submitButton"
        android:layout_toStartOf="@+id/submitButton" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailInput"
        android:hint="Email Address"
        android:gravity="center"
        android:layout_below="@+id/einInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordInput"
        android:inputType="textPassword"
        android:hint="Password"
        android:gravity="center"
        android:layout_below="@+id/emailInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordConfirmInput"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:gravity="center"
        android:layout_above="@+id/descriptionInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descriptionInput"
        android:hint="A short description of your organization"
        android:lines="3"
        android:maxLines="3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/submitButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/organizationInput"
        android:hint="Organization Name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nameInput"
        android:layout_toEndOf="@+id/nameInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/addressInput"
        android:hint="Street Address of Organization"
        android:layout_below="@+id/nameInput"
        android:layout_alignRight="@+id/submitButton"
        android:layout_alignEnd="@+id/submitButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/zipcodeInput"
        android:hint="Zipcode"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/addressInput"
        android:layout_alignLeft="@+id/addressInput"
        android:layout_alignStart="@+id/addressInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/addressInput"
        android:layout_alignLeft="@+id/addressInput"
        android:layout_alignStart="@+id/addressInput"
        android:id="@+id/cityInput"
        android:inputType="text"
        android:hint="City of Org" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cityInput"
        android:layout_alignTop="@+id/cityInput"
        android:layout_below="@+id/addressInput"
        android:layout_toRightOf="@+id/cityInput"
        android:id="@+id/stateSpinner" />


</RelativeLayout>
